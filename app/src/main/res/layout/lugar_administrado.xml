<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_lugar_administrado"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Pantalla de lugar administrado"
        android:background="@android:drawable/bottom_bar"
        android:padding="5dp"
        android:textColor="#FFFFFF"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre: " />

            <EditText
                android:id="@+id/edit_text_nombre_lugar_administrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/boton_cambiar_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar nombre" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion: " />

            <EditText
                android:id="@+id/edit_text_direccion_lugar_administrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/boton_cambiar_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar direccion" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visiblidad: " />

            <EditText
                android:id="@+id/edit_text_visiblidad_lugar_administrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/boton_cambiar_visiblidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar visiblidad" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latitud: " />

            <EditText
                android:id="@+id/edit_text_latitud_lugar_administrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/boton_cambiar_latitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar latitud" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitud: " />

            <EditText
                android:id="@+id/edit_text_longitud_lugar_administrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/boton_cambiar_longitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar longitud" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion: " />

            <EditText
                android:id="@+id/edit_text_descripcion_lugar_administrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType=""
                android:text="Name" />

            <Button
                android:id="@+id/boton_cambiar_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar descripcion" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoria: " />

            <Spinner
                android:id="@+id/spinner_categorias_lugar_administrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/categorias_administrados"
                android:spinnerMode="dropdown"/>

            <Button
                android:id="@+id/boton_cambiar_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar categoria" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>