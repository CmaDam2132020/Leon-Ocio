<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton_iniciar_sesion_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_boton_iniciar_sesion" />

    <Button
        android:id="@+id/boton_ir_a_busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar busqueda" />

    <Button
        android:id="@+id/boton_cerrar_sesion_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Cerrar Sesion" />

</LinearLayout>